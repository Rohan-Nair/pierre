  "type": "module",
  "scripts": {
    "ws": "bun --silent scripts/ws.ts",
    "tsc": "bun run ws \"*\" tsc",
    "clean": "bunx del-cli 'apps/*/.{next,source}' 'packages/*/dist' 'apps/*/tsconfig.tsbuildinfo' 'packages/*/tsconfig.tsbuildinfo'",
    "clean:all": "bun run clean && bunx del-cli '**/node_modules'",
    "update-themes": "node update-themes.js",
    "icons:sprite": "node scripts/build-sprite.js && bun run format",
    "icons": "bun run icons:sprite",
    "lint": "oxlint --type-aware --tsconfig tsconfig.oxlint.json .",
    "lint:fix": "oxlint --type-aware --tsconfig tsconfig.oxlint.json --fix .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "prepare": "husky",
    "demo:build": "(cd apps/demo && bun run build)",
    "docs:build": "(cd apps/docs && bun run build)"
  },
  "devDependencies": {
    "@pierre/icons": "catalog:",
    "@types/bun": "catalog:",
    "@typescript/native-preview": "catalog:",
    "husky": "catalog:",
    "oxfmt": "catalog:",
    "oxlint": "catalog:",
    "oxlint-tsgolint": "catalog:",
    "postcss-html": "catalog:",
    "stylelint": "catalog:",
    "stylelint-config-standard": "catalog:",
    "svgo": "catalog:",
    "typescript": "catalog:"
  },
  "overrides": {
    "@shikijs/core": "catalog:",
    "@shikijs/engine-javascript": "catalog:",
    "@shikijs/transformers": "catalog:",
    "baseline-browser-mapping": "catalog:",
    "next": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "shiki": "catalog:",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "oxfmt --write",
      "git update-index --again",
      "oxlint --type-aware --tsconfig tsconfig.oxlint.json --fix"
    ],
    "**/*.{css,pcss,postcss}": [
      "stylelint --fix",
      "git update-index --again"
    ]
  }
}
