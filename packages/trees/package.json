{
  "name": "@pierre/trees",
  "version": "0.0.1-beta.2",
  "license": "apache-2.0",
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "sideEffects": [
    "./dist/components/web-components.js"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./web-components": {
      "types": "./dist/web-components.d.ts",
      "import": "./dist/web-components.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./ssr": {
      "types": "./dist/ssr/index.d.ts",
      "import": "./dist/ssr/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown --clean",
    "dev": "echo 'Watching for changesâ€¦' && tsdown --watch --log-level error",
    "test": "bun test",
    "coverage": "bun test --coverage",
    "test:e2e": "bun run build && (bun ./test/e2e/check-playwright-binary.ts || bun run test:e2e:installbinary) && bunx playwright test -c test/e2e/playwright.config.ts",
    "test:e2e:installbinary": "bunx playwright@1.51.1 install chromium",
    "test:e2e:server": "vite --config test/e2e/vite.config.ts",
    "tsc": "tsgo --noEmit --pretty",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@headless-tree/core": "catalog:",
    "preact": "catalog:",
    "preact-render-to-string": "catalog:"
  },
  "devDependencies": {
    "@arethetypeswrong/core": "catalog:",
    "@playwright/test": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "autoprefixer": "catalog:",
    "jsdom": "catalog:",
    "postcss": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
